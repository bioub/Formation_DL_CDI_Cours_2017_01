{% extends "::base.html.twig" %}

{% block title %}Liste des contacts{% endblock %}


{% block body %}
    <h2>Liste des contacts</h2>

    {% if app.session.flashbag.has('success') %}
    {{ bootstrap_alert(app.session.flashbag.get('success')[0]) }}
    {% endif %}

    <table class="table table-striped table-hover">
        {% for contact in contacts %}
        <tr>
            <td>{{ contact.prenom }} {{ contact.nom }}</td>
            <td>
                <a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="btn btn-primary btn-xs">Afficher</a>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
