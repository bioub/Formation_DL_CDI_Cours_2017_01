{% extends "::base.html.twig" %}

{% block title %}{{ contact.prenom }} {{ contact.nom }}{% endblock %}

{% block body %}
    <h2>Détails d'un contact</h2>
    <div class="row">
        <div class="col-md-2">
            <b>Prénom</b>
        </div>
        <div class="col-md-10">
            {{ contact.prenom }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>Nom</b>
        </div>
        <div class="col-md-10">
            {{ contact.nom }}
        </div>
    </div>
{% endblock %}
